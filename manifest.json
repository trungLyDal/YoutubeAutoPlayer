{
  "manifest_version": 3,
  "name": "YouTube NonStop Watcher",
  "version": "1.0",
  "description": "Automatically clicks 'Yes' to the 'Are you still watching?' prompt on YouTube.",
  "permissions": [],
  "host_permissions": [
    "*://*.youtube.com/*" 
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"], 
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}